<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_design_0"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_6sdp">
    <View
        android:id="@+id/view_bg_design"
        android:background="@drawable/bg_design_item"
        android:padding="@dimen/size_5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@+id/tv_design_item_type"/>
    <ImageView
        android:id="@+id/iv_design_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_bg_design"
        app:layout_constraintEnd_toEndOf="@+id/view_bg_design"
        app:layout_constraintStart_toStartOf="@+id/view_bg_design"
        app:layout_constraintTop_toTopOf="@+id/view_bg_design"/>
    <TextView
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/color_333333"
        android:id="@+id/tv_design_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="@font/inter_regular"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_bg_design"
        app:layout_constraintStart_toStartOf="@+id/view_bg_design"/>
</androidx.constraintlayout.widget.ConstraintLayout>