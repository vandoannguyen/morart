<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_template_multiple_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tv_multi_image"
        android:background="@drawable/custom_bg_image_multi"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingRight="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:drawablePadding="@dimen/_3sdp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/source_san_pro_regular"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_alignParentStart="true"
        app:drawableStartCompat="@drawable/ic_image_black_small"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_multi_music"
        android:padding="@dimen/_6sdp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:src="@drawable/ic_audio_stop_small"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_alignParentEnd="true"/>
    <ProgressBar
        android:id="@+id/progressAudio"
        android:visibility="gone"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:indeterminate="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_alignParentEnd="true"
        android:indeterminateTint="@color/black"
        android:indeterminateTintMode="src_atop"/>
</RelativeLayout>